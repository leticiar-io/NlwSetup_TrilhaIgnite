generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

// Mongo, Cockroach, SQL
model Habit {
  id            String          @id @default(uuid()) //uuid - Unique identifier
  title         String
  created_at    DateTime

  dayHabits      DayHabit[]
  weekDays HabitWeekDays[]

  @@map("habits")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayHabits DayHabit[]

  @@unique([date])
  @@map("days")
}

model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id]) //I cannot have the same habit registered more than once in a day, I have to change ID
  @@map("day_habits")
}
